<!DOCTYPE html>
<html>
  <head>
    <title>YachtClub</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="https://s3.amazonaws.com/codecademy-content/courses/ltp/css/shift.css" rel="stylesheet">
    <link rel="stylesheet" href="https://s3.amazonaws.com/codecademy-content/courses/ltp/css/bootstrap.css">
    <link rel="stylesheet" href="main.css">
  </head>

  <body>
    <% if !user_signed_in? %>
      <div class="nav-1">
        <div class="pull-left">
          <%= link_to("", root_path, class: "fa-solid fa-sailboat", id: "logo") %>
          <p>Welcome!</p>
        </div>
        <div class="pull-right">
          <%= link_to("Sign up",  new_user_registration_path) %></li>
          <%= link_to("Log in", new_user_session_path) %></li>
        </div>
      </div>
    <% else %>
      <div class="nav-1">
        <div class="pull-left">
          <%= link_to("", root_path, class: "fa-solid fa-sailboat", id: "logo") %>
          <p>Welcome, <%= current_user.email %>!</p>
          <%= link_to("Browse", yachts_path) %>
        </div>
        <div class="pull-right">
          <%= link_to 'Logout', destroy_user_session_path, data: { turbo_confirm: 'Are you sure?', turbo_method: :delete } %>
        </div>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
