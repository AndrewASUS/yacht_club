
<h1 class="text-center my4">Edit Your Booking</h1>

<div class="container">
  <%= simple_form_for @booking, url: booking_path(@booking), html: { class: 'form-horizontal' }, method: :patch do |f| %>
    <div class="field">
      <%= f.input :from_date, label: "From", input_html: { class: 'form-control' } %>
    </div>
    <div class="field">
      <%= f.input :to_date, label: "To", input_html: { class: 'form-control' } %>
    </div>
    <div class="actions">
      <%= f.button :submit, "Update Booking", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
