<div class="container mt-5">
  <h1 class="text-center display-4 text-uppercase">Yacht Details</h1>

  <div class="card mt-4 shadow-lg">
    <div class="card-body">
      <% if @yacht.photo.present? %>
        <div class="text-center mb-4">
          <%= image_tag @yacht.photo, class: "img-fluid rounded", alt: @yacht.name %>
        </div>
      <% end %>
      <h2 class="card-title text-center text-primary font-weight-bold"><%= @yacht.name %></h2>
      <p class="card-text text-center"><strong><i class="fas fa-ship"></i> Model:</strong> <%= @yacht.model %></p>
      <p class="card-text text-center"><strong><i class="fas fa-dollar-sign"></i> Price per day:</strong> <%= number_to_currency(@yacht.price) %></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="text-center">
      <% if @booking.status == "Pending host validation"%>
      <h3>  <strong><i class="fa fa-star" aria-hidden="true"></i> We are waiting for <%= @booking.yacht.user.first_name %> to confirm your request </strong> <i class="fa fa-star" aria-hidden="true"></i></h3>
      <h3> So... stay tuned! </h3>
      <% end %>
      <hr>

        <div class="row">
          <div class="col-md-6">
              <div class="text-left">
              <h4> Reminder of your <strong id="red-word">booking details</strong></h4>
              <br>
                <table>
                 <tbody>
                    <tr>
                      <td> <h4><i class="fa fa-heart" aria-hidden="true"></i> </h4></td>
                      <td><h4> &nbsp; Your host is <strong> <%= @booking.yacht.user.first_name %> </strong></h4></td>
                    </tr>
                    <tr>
                      <td><h4> <i class="fa fa-bed" aria-hidden="true"></i></h4></td>
                      <td><h4> &nbsp; You have requested to book this yacht from : <br>  &nbsp;   <%= @booking.from_date %> to <%= @booking.to_date %> </h4></td>
                    </tr>
                    <tr>
                      <td><h4> <i class="fa fa-thumbs-up" aria-hidden="true"></i></h4></td>
                      <td><h4> &nbsp; The total price for your booking is <%= @booking.value %> â‚¬</h4></td>
                    </tr>
                  </tbody>
                </table>
              </div>
          </div>
        </div>


      <% if @booking.status == "Pending guest request"%>
      <%= simple_form_for(@booking) do |f| %>
      <%= f.submit "Confirm my booking", class: "btn btn-danger btn-lg" %>
      <% end %>
      <% end %>
      <hr>
    <%= link_to "See my next stays", bookings_path, class:"btn btn-default btn-lg " %>
    </div>
  </div>
</div>
</div>
