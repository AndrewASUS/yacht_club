<div class="container mt-5">
  <h1 class="text-center display-4 text-uppercase">Yacht Details</h1>

  <div class="card mt-4 shadow-lg">
    <div class="card-body">
      <% if @yacht.photo.present? %>
        <div class="text-center mb-4">
          <%= image_tag @yacht.photo, class: "img-fluid rounded", alt: @yacht.name %>
        </div>
      <% end %>
      <h2 class="card-title text-center text-primary font-weight-bold"><%= @yacht.name %></h2>
      <p class="card-text text-center"><strong><i class="fas fa-ship"></i> Model:</strong> <%= @yacht.model %></p>
      <p class="card-text text-center"><strong><i class="fas fa-dollar-sign"></i> Price per day:</strong> <%= number_to_currency(@yacht.price) %></p>
    </div>
    <div class="card-footer d-flex justify-content-between bg-light">
      <a href="<%= edit_yacht_path(@yacht) %>" class="btn btn-primary btn-lg">
        <i class="fas fa-edit"></i> Edit
      </a>
      <a href="<%= yachts_path %>" class="btn btn-secondary btn-lg">
        <i class="fas fa-arrow-left"></i> Back to All Yachts
      </a>
      <%= button_to yacht_path(@yacht), method: :delete, data: { confirm: "Are you sure you want to delete this yacht?" }, class: "btn btn-danger btn-lg" do %>
        <i class="fas fa-trash-alt"></i> Delete
      <% end %>
    </div>
  </div>
</div>

