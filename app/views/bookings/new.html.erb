<h1>Book this Yacht</h1>


<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Book this yacht</h3>
        <%= simple_form_for @booking do |f| %>
          <%= f.input :from_date %>
          <%= f.input :to_date %>
          <%= f.submit class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="card mt-4">
    <div class="card-body">
      <h3 class="card-title">Book This Yacht</h3>
      <%= form_with(model: [@yacht, @yacht.booking.create], local: true) do |form| %>
        <div class="form-group">
          <%= form.label :from_date, "Start Date" %>
          <%= form.date_field :from_date, class: "form-control", required: true %>
        </div>
        <div class="form-group">
          <%= form.label :to_date, "End Date" %>
          <%= form.date_field :to_date, class: "form-control", required: true %>
        </div>
        <%= form.submit "Submit Booking", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
