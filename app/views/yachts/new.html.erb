<h1 class="text-center my4">Add Your Yacht</h1>

<div class="container my4">
  <%= simple_form_for @yacht, html: { class: 'form-horizontal' } do |f| %>
    <div class="field">
      <%= f.input :name, label: "Yacht Name", input_html: { class: 'form-control' } %>
    </div>
    <div class="field">
      <%= f.input :model, label: "Model", input_html: { class: 'form-control' } %>
    </div>
    <div class="field">
      <%= f.input :price, label: "Price per day", input_html: { class: 'form-control' } %>
    </div>
    <div class="field">
      <%= f.input :photo, label: "Upload Photo", input_html: { class: 'form-control' } %>
    </div>
    <div class="actions">
      <%= f.button :submit, "Create Yacht", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
