<h1 class="text-center my4">Edit Your Yacht</h1>

<div class="container">
  <%= simple_form_for @yacht, url: yacht_path(@yacht), html: { class: 'form-horizontal' }, method: :patch do |f| %>
    <div class="field">
      <%= f.input :name, label: "Yacht Name", input_html: { class: 'form-control' } %>
    </div>
    <div class="field">
      <%= f.input :model, label: "Model", input_html: { class: 'form-control' } %>
    </div>
    <div class="field">
      <%= f.input :price, label: "Price", input_html: { class: 'form-control' } %>
    </div>
    <div class="field">
      <%= f.input :photo, label: "Photo URL", input_html: { class: 'form-control' } %>
    </div>
    <div class="actions">
      <%= f.button :submit, "Update Yacht", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


